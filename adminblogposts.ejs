<div class="row-fluid">
    <div class="box ">
        <div class="title">
            <h4> <span>Blog Posts</small></span> </h4>
        </div><!-- End .title -->
          
        <div class="content top">
            <table id="datatable_example" class="responsive table table-striped table-bordered" style="width:100%;margin-bottom:0; ">
                <thead>
                    <tr>
                        <th class="jv no_sort">
                            <label class="checkbox ">
                                <input type="checkbox">
                            </label>
                        </th>
                        <th class="jv no_sort">Imagem</th>
                        <th class="to_hide_phone no_sort">Título</th>
                        <th >Autor</th>
                        <th class="ue no_sort"><i class="icon-comments big"></i></th>
                        <th class="ms no_sort ">Ações</th>
                    </tr>
                </thead>
                <tbody>

                    <% for (var cont in blogPosts) { %>

                        <tr>
                            <td>
                                <label class="checkbox ">
                                    <input type="checkbox">
                                </label>
                            </td>
                            <td><img class="thumbnail small" src="/images/blog_images/<%= blogPosts[cont].imagemPost %>" alt="Imagem da postagem" /></td>
                            <td class="to_hide_phone"><%= blogPosts[cont].titulo %></td>
                            <td><%= blogPosts[cont].autor %></td>
                            <td>14</td>
                            <td class="ms">
                                <div class="btn-group1"> 
                                    <a href="/admin/blog/post/editar/<%= blogPosts[cont].url %>" class="btn btn-small" rel="tooltip" data-placement="top" data-original-title="Editar"><i class="gicon-edit"></i></a>
                                    <a href="/admin/blog/post/ver/<%= blogPosts[cont].url %>" class="btn btn-small" rel="tooltip" data-placement="top" data-original-title="Ver"><i class="gicon-eye-open"></i></a>
                                    <a href="/admin/blog/post/excluir/<%= blogPosts[cont].url %>" class="btn btn-small" rel="tooltip" data-placement="top" data-original-title="Excluir"><i class="gicon-remove "></i></a> 
                                </div>
                            </td>
                        </tr>

                    <% } %>
                    
                </tbody>
            </table>
        </div><!-- End .content --> 
    </div><!-- End box --> 
</div><!-- End .row-fluid --> 