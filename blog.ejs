<section id="content">
	<div class="container">
				
		<div id="mainbody">
					
			<div class="row">
				<div class="span9">
						<div class="itemListView clearfix eBlog">

						<div class="itemList">
							
                            <% for (var post in blogPosts) { %>
                            	
							<div class="itemContainer">
									
								<div class="itemHeader">
									<h3 class="itemTitle">
										<a href="/blog/post/<%= blogPosts[post].url %>"><%= blogPosts[post].titulo %></a>
									</h3>
									<div class="post_details">
										<span class="catItemDateCreated"><span class="icon-calendar"></span> <%= blogPosts[post].data %></span>
										<span class="catItemAuthor">por <a rel="author" href="#"><%= blogPosts[post].autor %></a></span>
									</div><!-- end post details -->
								</div><!-- end itemHeader -->
									
								<div class="itemBody">
									<div class="itemIntroText">
										<p><a href="/blog/post/<%= blogPosts[post].url %>" class="hoverBorder pull-left" style="margin-right: 20px;"><img src="images/blog_images/<%= blogPosts[post].imagemPost %>" border="0" alt="" /></a></p>

                                        <% for (var cont = 0; cont < 4; cont++) { %>

                                            <p><%= blogPosts[post].descricao[cont].paragrafo %></p>

                                        <% }; %>
									</div><!-- end Item Intro Text -->
									<div class="clear"></div>
									<div class="itemReadMore">
										<a class="readMore" href="/blog/post/<%= blogPosts[post].url %>">Leia Mais...</a>
									</div><!-- end read more -->
									<div class="clear"></div>
								</div><!-- end Item BODY -->
									
								<ul class="itemLinks clearfix">
									<li class="itemCategory">
										<span class="icon-folder-close"></span> 
										<span>Categoria</span>
                                        <a href="/blog/categoria/<%= blogPosts[post].categoria.url %>"><%= blogPosts[post].categoria.descricao %></a>
									</li>
								</ul><!-- item links -->
								<div class="clear"></div>
								<div class="itemTagsBlock">
									<span class="icon-tags"></span>
									<span>Palavras-chave:</span>
									<ul class="itemTags">
                                        <% for (var palavraChave in blogPosts[post].palavrasChave) { %>
										    <li><a href="/blog/palavra-chave/<%= blogPosts[post].palavrasChave[palavraChave].url %>"><%= blogPosts[post].palavrasChave[palavraChave].descricao %></a>, </li>
                                        <% }; %>
									</ul>
									<div class="clear"></div>
								</div><!-- end tags blocks -->
										
							</div><!-- end Blog Item -->
							<div class="clear"></div>

                            <% }; %>
						</div><!-- end .itemList -->
							
