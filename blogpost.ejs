                        <div class="clear"></div>
                        <!-- end DISQUS comments block -->
				    </div>
				    <!-- End Item Layout -->
			    </div>

			    <div class="span3">
				    <div id="sidebar" class="sidebar-right">
								
					    <div class="widget">
							<h4 class="title">Blog Categorias</h4>
							<ul class="menu">
								<li><a href="#">Nossa Rede</a></li>
							</ul><!-- end menu -->
						</div><!-- end widget -->
								
						<div class="widget">
							<h4 class="title">Arquivo</h4>
							<ul class="menu">
								<li><a href="#">Março 2013 (1)</a></li>
							</ul><!-- end menu -->
						</div><!-- end widget -->
								
